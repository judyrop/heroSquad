{{#partial "content"}}
            <h1>Create a Hero</h1>
            <form action="/heroes/new" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input id="name" name="name" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="age">Age</label>
                    <input id="age" name="age" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="power">Power</label>
                    <input id="power" name="power" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="weakness">Weakness</label>
                    <input id="weakness" name="weakness" type="text" class="form-control">
                </div>
        <button type="submit" class="btn btn-primary">Add a Hero</button>
    </form>

{{/partial}}

