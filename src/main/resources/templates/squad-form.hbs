{{#partial "content"}}
<form class = "form-control" action = "new/squad" method ="post">
<div class = "form-group">
 <input type="text" placeholder="Enter the squad name" name="squadName" class="form-control" required>
</div>
<div class = "form-group">
 <input type="number" placeholder="Enter the squad size" name="max-size" class="form-control" required>
</div>
<div class = "form-group">
 <textarea type="text" placeholder="Enter the squad cause" name="squadCause" class="form-control" required></textarea>
</div>
<button type = "submit">Add</button>
</form>
{{/partial}}
{{>layout}}
