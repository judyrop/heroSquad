{{#partial "content"}}
<div class = "container"
 <h1>Hero Squad</h1>
 <p>Hero squad is a game for kids where you can choose a superhero</p>
  <p><img src = "/images/gabriel-tovar-lQvr3z9cGYE-unsplash.jpg" alt= "photo of a superhero" width = "40%" height = "70%"></p>
  <a  class = "btns" href = "/hero-form"> CREATE NEW HERO</a>
  <div class = "hero-details">
  <h3>Hero's Details</h3>
  {{#each hero }}
  <p>Name : {{name}}</p>
  <p>Age : {{age}}</p>
  <p>Special power : {{power}}</p>
  <p>Weakness : {{weakness}}</p>
{{/each}}
{{/partial}}
{{>layout.hbs}}